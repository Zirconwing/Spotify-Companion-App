<RecScreen>
    name: 'RecScreen'
    on_pre_enter: 
        app.contents()
    on_enter:
        app.recommendations()
    BoxLayout:
        orientation: 'horizontal'
        size: root.width, root.height
        Button:
            text: "Menu"
            pos_hint: {"x":0,"y":0.95}
            size_hint: (0.4,0.05)
            on_release: app.root.current = "MenuScreen"
        Label:
            text: "Based on what you listen to,\nHere are some recomendations!"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            font_size: 20
            halign: "center"
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: app.rec[0]
                font_name: './YUGOTHR.TTC'
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                font_size: 20
                halign: "center"
            Label:
                text: app.rec[1]
                font_name: './YUGOTHR.TTC'
                font_size: 20
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                halign: "center"
            Label:
                text: app.rec[2]
                font_name: './YUGOTHR.TTC'
                font_size: 20
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                halign: "center"
            Label:
                text: app.rec[3]
                font_name: './YUGOTHR.TTC'
                font_size: 20
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                halign: "center"
            Label:
                text: app.rec[4]
                font_name: './YUGOTHR.TTC'
                font_size: 20
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                halign: "center"
