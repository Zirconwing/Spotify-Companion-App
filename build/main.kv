<LoginManager>
    Screen:
        name: 'LoginScreen'
        BoxLayout:
            size: root.width, root.height
            orientation: "horizontal"
            Label:
                text: ""
            BoxLayout:
                orientation: "vertical"
                size_hint: 0.5, 0.5
                pos_hint: {"center_x":0.5,"center_y":0.5}
                Label:
                    text: "Spotify Stats App"
                    size_hint: 0.5,0.5
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                
                Label:
                    text: "Press Start and wait until you are requested to download\n data.json. Download and re-enter the app and press\n Select file. If you re-entered from inside the app\n it is because you did not choose\n the right data.json file\n so please press Select file to choose again."
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    font_size: 30
                    halign: 'center'

                Button:
                    text: "Start"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    size_hint: 1,0.3
                    on_release: app.web_open()
                Button:
                    text: "Select file"
                    pos_hint: {"center_x":0.5,"center_y":0.5}
                    size_hint: 1,0.3
                    on_release: app.root.current = 'UploadScreen'

            Label:
                text: ""
    HomeScreen:
    GenresScreen:
    ArtistsScreen:
    RecScreen:
    MenuScreen:
    TracksScreen:
    UploadScreen:
